<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutCreation.MVVM.Views.WorkoutCreatePage"
             xmlns:viewmodel="clr-namespace:WorkoutCreation.MVVM.ViewModels"
             x:DataType="viewmodel:WorkoutViewModel"
             Title="Workout Create">

    <StackLayout>
        <!--Button for Creating Exercises-->
        <Button  
            Margin="20"
            Text="Create Exercise" 
            Clicked="Button_Clicked" 
            VerticalOptions="Center"
            HorizontalOptions="Center"
            HeightRequest="70"
            WidthRequest="200"/>
        
        <!--Button for Viewing exercises-->
        <Button  
            Margin="20"
            Text="View Exercises" 
            Clicked="Button_Clicked_1" 
            VerticalOptions="Center"
            HorizontalOptions="Center"
            HeightRequest="70"
            WidthRequest="200"/>


    </StackLayout>
</ContentPage>